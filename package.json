    "gulp": "^3.9.0",
    "gulp-help": "^1.6.1",
    "js-yaml": "^3.4.6",
    "lodash.merge": "^3.3.2",
    "normalize.scss": "^0.1.0",
    "p2-theme-core": "^6.3.7",
    "semver": "^5.1.0",
    "singularitygs": "^1.6.2"
  },
  "dependencies": {
    "modularscale-sass": "^2.1.1",
    "sassdoc-theme-vulcan": "^0.2.0"
  }
