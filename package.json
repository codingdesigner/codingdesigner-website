{
  "name": "PatternLabStarter",
  "version": "6.0.0",
  "description": "Pattern Lab Starter",
  "main": "gulpfile.js",
  "author": {
    "name": "Evan Lovely",
    "url": "https://github.com/EvanLovely"
  },
  "contributors": [
    {
      "name": "Chris Bloom",
      "url": "https:/github.com/illepic"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:phase2/pattern-lab-starter.git"
  },
  "keywords": [
    "pattern-lab",
    "prototyping"
  ],
  "scripts": {
    "prestart": "npm run checkDeps",
    "start": "gulp clean && gulp compile && gulp",
    "precompile": "npm run checkDeps",
    "compile": "gulp clean && gulp compile",
    "test": "gulp compile && gulp validate",
    "checkDeps": "node scripts/dependency-version-checker.js",
    "postinstall": "find node_modules/ -name \"*.info\" -type f -delete && bower install --allow-root"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "bourbon": "^4.2.3",
    "bower": "^1.3.12",
