&lt;div class=&quot;post-teaser {{^teaser-img}}no-image{{/teaser-img}}&quot;&gt;
  &lt;div class=&quot;post-teaser--text&quot;&gt;
    &lt;h2 class=&quot;post-teaser--title&quot;&gt;&lt;a href=&quot;{{ teaser-url }}&quot; class=&quot;post-teaser--link&quot;&gt;{{ teaser-headline }}&lt;/a&gt;&lt;/h2&gt;
    &lt;div class=&quot;post-teaser--excerpt&quot;&gt;
      &lt;p&gt;{{ teaser-excerpt }}&lt;/p&gt;
    &lt;/div&gt;
  &lt;/div&gt;
  {{#teaser-img}}
    &lt;div class=&quot;post-teaser--thumb&quot;&gt;
      &lt;a href=&quot;{{ teaser-url }}&quot; class=&quot;post-teaser--image-link&quot;&gt;
        &lt;img src=&quot;{{ teaser-img.src }}&quot; alt=&quot;{{ teaser-img.alt }}&quot;/&gt;
      &lt;/a&gt;
    &lt;/div&gt;
  {{/teaser-img}}
&lt;/div&gt;
